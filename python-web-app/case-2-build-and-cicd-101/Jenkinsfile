pipeline {
    agent any
    
    
    stages {
        stage('Checkout') { 
            echo "clone repo..."
            git 'https://github.com/DeepCloudmosphere/cloud_POCs.git'
        }
        stage('Build') {
            steps {
                echo "building...."
                sh 'docker image build -t deepcloudmosphere/python-web:distroless-j ./python-web-app/'
            }

        }
        stage('test') {
           steps {
                echo "testing...."
                
            }

        }
      
        stage('deploy') {
           steps {
                echo "deploying hureee...."  
               
            }

        }          
          
    }
    
}

